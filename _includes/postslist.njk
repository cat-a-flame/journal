<ol reversed class="postlist">
    {% for post in postslist | reverse %}
        <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
            
            {% if post.data.image %}
                <div>
                    <img class="postlist-image" src="{{ post.data.image }}" alt="" />
                </div>
            {% endif %}

            <div class="postlist-details">
                <div class="postlist-meta">
	                 <a href="/tags/{{ post.data.tags[1] | slugify }}" class="postlist-category">{{ post.data.tags[1] }}</a>

                    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("yyyy LLLL dd.") }}</time>
                </div>
                
                <a href="{{ post.url }}" class="postlist-link">{{ post.data.title }}</a>

                {% if post.data.lead %}
                    <p class="postlist-lead">
                        {{ post.data.lead | safe }}
                    </p>
                {% endif %}
            </div>
        </li>
    {% endfor %}
</ol>